<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
    <UseWindowsForms>true</UseWindowsForms>
    <ApplicationIcon>Resources\icon.ico</ApplicationIcon>
    <AssemblyName>GrammarFixer</AssemblyName>
    <Version>1.5.2</Version>
    <Authors>TheHolzOneZ</Authors>
    <Company>TheHolzOneZ</Company>
    <Product>Grammar Fixer</Product>
    <Description>AI-powered grammar fixer with global hotkeys bz TheHolzOneZ</Description>
    <Win32Resource />
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.Text.Json" Version="8.0.5" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="Resources\icon.ico" />
    <Content Include="Resources\icon.ico">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

</Project>