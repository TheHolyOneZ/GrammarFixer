<Window x:Class="GrammarFixer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Grammar Fixer v1.5.2" 
        Height="900" 
        Width="500"
        MinWidth="450"
        MinHeight="600"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen"
        Activated="MainWindow_Activated">
    
    <Window.Resources>
        <Storyboard x:Key="FadeInAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="0" To="1" Duration="0:0:0.3"/>
        </Storyboard>
        <Storyboard x:Key="SlideInAnimation">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                           From="20" To="0" Duration="0:0:0.4">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </Window.Resources>

    <Border CornerRadius="12" Background="#14141E">
        <Border.Effect>
            <DropShadowEffect Color="Black" Opacity="0.5" BlurRadius="20" ShadowDepth="0"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="#1E1E2D" CornerRadius="12,12,0,0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                        <Ellipse Width="10" Height="10" Fill="#64C8FA" Margin="0,0,10,0"/>
                        <TextBlock Text="Grammar Fixer v1.5.2" 
                                 Foreground="White" 
                                 FontSize="16" 
                                 FontWeight="SemiBold"
                                 VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,10,0">
                        <Button x:Name="ToggleSizeModeButton" 
                                Content="â†”" 
                                Width="40" 
                                Height="40"
                                Background="Transparent"
                                Foreground="White"
                                BorderThickness="0"
                                FontSize="16"
                                Click="ToggleSizeModeButton_Click"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#3C3C50"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button x:Name="MinimizeButton" 
                                Content="â”€" 
                                Width="40" 
                                Height="40"
                                Background="Transparent"
                                Foreground="White"
                                BorderThickness="0"
                                FontSize="16"
                                Click="MinimizeButton_Click"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#3C3C50"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        
                        <Button x:Name="CloseButton" 
                                Content="âœ•" 
                                Width="40" 
                                Height="40"
                                Background="Transparent"
                                Foreground="White"
                                BorderThickness="0"
                                FontSize="16"
                                Click="CloseButton_Click"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#E74C3C"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <ScrollViewer x:Name="MainScrollViewer" Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <Grid x:Name="MainBentoGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Margin="25,10,25,20">
                    <TextBlock Text="Grammar Fixer" Foreground="White" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Text="Your AI-powered writing assistant." Foreground="#B4B4BE" FontSize="14" HorizontalAlignment="Center"/>
                </StackPanel>

                <Grid Grid.Row="1" Margin="25,0,25,25">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    
                    <Border Grid.Row="0" Background="#1E1E2D" CornerRadius="10" Margin="0,0,0,10">
                        <Grid Margin="20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                <TextBlock Text="âš¡ Status" Foreground="#64C8FA" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,12"/>
                                <TextBlock x:Name="StatusText" 
                                         Text="Ready" 
                                         Foreground="#64FA96" 
                                         FontSize="13" 
                                         FontWeight="Medium"
                                         Margin="0,0,0,8"/>
                                <TextBlock x:Name="StatsText" 
                                         Text="Fixes: 0 | Last fix: Never" 
                                         Foreground="#B4B4BE" 
                                         FontSize="11"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right">
                                <TextBlock Text="Current Hotkey:" Foreground="#B4B4BE" FontSize="12" Margin="0,0,0,4" HorizontalAlignment="Right"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock x:Name="HotkeyDisplayText" 
                                            Text="Ctrl + Alt + T" 
                                            Foreground="White" 
                                            FontSize="14" 
                                            FontWeight="SemiBold"
                                            VerticalAlignment="Center"/>
                                    <Button 
                                        Content="ðŸ”„" 
                                        Style="{StaticResource ModernButton}"
                                        Background="#2D2D42"
                                        Width="35"
                                        Height="35"
                                        FontWeight="Bold"
                                        Padding="0"
                                        Margin="10,0,0,0"
                                        VerticalAlignment="Center"
                                        Click="ChangeHotkeyButton_Click"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>

                    
                    <Border Grid.Row="1" Background="#1E1E2D" CornerRadius="10" Margin="0,0,0,10">
                        <StackPanel Margin="20">
                            <TextBlock Text="ðŸŽ­ Personas" Foreground="#64C8FA" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,12"/>
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ComboBox x:Name="PersonaCombo" 
                                        Grid.Column="0"
                                        Style="{StaticResource ModernComboBox}"
                                        Height="35"
                                        SelectionChanged="PersonaCombo_SelectionChanged"/>
                                <Button x:Name="AddPersonaButton"
                                        Grid.Column="1"
                                        Content="+"
                                        Width="35"
                                        Height="35"
                                        Padding="0"
                                        Margin="5,0,0,0"
                                        Style="{StaticResource ModernButton}"
                                        Background="#2D2D42"
                                        Click="AddPersonaButton_Click"/>
                                <Button x:Name="EditPersonaButton"
                                        Grid.Column="2"
                                        Content="Edit"
                                        Width="35"
                                        Height="35"
                                        Padding="0"
                                        Margin="5,0,0,0"
                                        Style="{StaticResource ModernButton}"
                                        Background="#2D2D42"
                                        Click="EditPersonaButton_Click"/>
                                <Button x:Name="RemovePersonaButton"
                                        Grid.Column="3"
                                        Content="-"
                                        Width="35"
                                        Height="35"
                                        Padding="0"
                                        Margin="5,0,0,0"
                                        Style="{StaticResource ModernButton}"
                                        Background="#2D2D42"
                                        Click="RemovePersonaButton_Click"/>
                            </Grid>
                            <TextBlock Text="Note: Only custom personas can be edited or removed." Foreground="#B4B4BE" FontSize="10" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                    
                    <StackPanel Grid.Row="2" x:Name="AdvancedSettingsPanel">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            
                            <Border Grid.Row="0" Grid.Column="0" Background="#1E1E2D" CornerRadius="10" Margin="0,0,5,10">
                                <StackPanel Margin="20">
                                    <TextBlock Text="ðŸŒ Language" Foreground="#64C8FA" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,12"/>
                                    <Grid VerticalAlignment="Center">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <ComboBox x:Name="LanguageCombo" 
                                            Grid.Column="0"
                                            Style="{StaticResource ModernComboBox}"
                                            Height="35"
                                            Margin="0,0,0,0"
                                            SelectionChanged="LanguageCombo_SelectionChanged"/>
                                        <Button x:Name="AddLanguageButton"
                                            Grid.Column="1"
                                            Content="+"
                                            Width="35"
                                            Height="35"
                                            Padding="0"
                                            Margin="5,0,0,0"
                                            Style="{StaticResource ModernButton}"
                                            Background="#2D2D42"
                                            Click="AddLanguageButton_Click"/>
                                        <Button x:Name="EditLanguageButton"
                                            Grid.Column="2"
                                            Content="Edit"
                                            Width="35"
                                            Height="35"
                                            Padding="0"
                                            Margin="5,0,0,0"
                                            Style="{StaticResource ModernButton}"
                                            Background="#2D2D42"
                                            Click="EditLanguageButton_Click"/>
                                        <Button x:Name="RemoveLanguageButton"
                                            Grid.Column="3"
                                            Content="-"
                                            Width="35"
                                            Height="35"
                                            Padding="0"
                                            Margin="5,0,0,0"
                                            Style="{StaticResource ModernButton}"
                                            Background="#2D2D42"
                                            Click="RemoveLanguageButton_Click"/>
                                    </Grid>
                                    <CheckBox x:Name="TranslateCheck" 
                                            Content="Translate to selected language" 
                                            Style="{StaticResource ModernCheckBox}"
                                            Margin="0,12,0,0"
                                            Checked="TranslateCheck_Changed"
                                            Unchecked="TranslateCheck_Changed"/>
                                </StackPanel>
                            </Border>

                            
                            <Border Grid.Row="0" Grid.Column="1" Background="#1E1E2D" CornerRadius="10" Margin="5,0,0,10">
                                <StackPanel Margin="20">
                                    <TextBlock Text="ðŸ”‘ API Configuration" Foreground="#64C8FA" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,12"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBox x:Name="ApiKeyBox"
                                            Grid.Column="0"
                                            VerticalContentAlignment="Center"
                                            Padding="8, 4"
                                            Height="35"
                                            FontSize="14"
                                            GotFocus="ApiKeyBox_GotFocus"
                                            LostFocus="ApiKeyBox_LostFocus"
                                            Margin="0,0,5,0"/>
                                        
                                        <Button x:Name="ToggleApiKeyButton"
                                            Grid.Column="1"
                                            Content="ðŸ‘ï¸â€ðŸ—¨ï¸"
                                            Width="35"
                                            Height="35"
                                            Background="#2D2D42"
                                            Foreground="White"
                                            BorderThickness="0"
                                            FontSize="16"
                                            Click="ToggleApiKeyVisibility_Click"
                                            Cursor="Hand">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Background" Value="#2D2D42"/>
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#3C3C50"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </Grid>

                                    <Button Content="ðŸ”— Get API Key" 
                                        Style="{StaticResource ModernButton}"
                                        Background="#2D2D42"
                                        HorizontalAlignment="Left"
                                        Margin="0,10,0,0"
                                        Click="GetApiKeyButton_Click"/>
                                </StackPanel>
                            </Border>

                            
                            <Border Grid.Row="1" Grid.Column="0" Background="#1E1E2D" CornerRadius="10" Margin="0,0,5,10">
                                <StackPanel Margin="20">
                                    <TextBlock Text="âš™ï¸ Behavior" Foreground="#64C8FA" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,12"/>
                                    <ComboBox x:Name="InputSourceCombo" 
                                            Style="{StaticResource ModernComboBox}"
                                            Height="35"
                                            Margin="0,0,0,12"
                                            SelectionChanged="InputSourceCombo_SelectionChanged">
                                        <ComboBoxItem Content="Selected Text (Auto-Copy)" IsSelected="True"/>
                                        <ComboBoxItem Content="Clipboard Content Only"/>
                                    </ComboBox>

                                    <CheckBox x:Name="MinToTrayCheck" 
                                            Content="Minimize to system tray" 
                                            Style="{StaticResource ModernCheckBox}"
                                            IsChecked="True"/>
                                    <CheckBox x:Name="NotifyCheck" 
                                            Content="Show notifications" 
                                            Style="{StaticResource ModernCheckBox}"
                                            IsChecked="True"/>
                                    <CheckBox x:Name="SoundCheck" 
                                            Content="Play sound on fix" 
                                            Style="{StaticResource ModernCheckBox}"
                                            IsChecked="False"/>
                                    <CheckBox x:Name="AutoCopyCheck" 
                                            Content="Auto-copy fixed text" 
                                            Style="{StaticResource ModernCheckBox}"
                                            IsChecked="True"/>
                                    <CheckBox x:Name="HistoryCheck" 
                                            Content="Keep fix history" 
                                            Style="{StaticResource ModernCheckBox}"
                                            IsChecked="True"/>
                                </StackPanel>
                            </Border>

                            
                            <Border Grid.Row="1" Grid.Column="1" Background="#1E1E2D" CornerRadius="10" Margin="5,0,0,10">
                                <StackPanel Margin="20">
                                    <TextBlock Text="ðŸ¤– AI Model" Foreground="#64C8FA" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,12"/>
                                    <ComboBox x:Name="ModelSelectionCombo" 
                                            Style="{StaticResource ModernComboBox}"
                                            Height="35"
                                            Margin="0,0,0,12"
                                            SelectionChanged="ModelSelectionCombo_SelectionChanged"/>
                                    <TextBlock Foreground="#696969" FontSize="10">
                                        <Hyperlink NavigateUri="https://ai.google.dev/gemini-api/docs/models?hl=en" RequestNavigate="Hyperlink_RequestNavigate" Foreground="#64C8FA" TextDecorations="None">
                                            <Run Text="View model documentation"/>
                                        </Hyperlink>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                            
                            
                            <Border Grid.Row="2" Grid.Column="0" Background="#1E1E2D" CornerRadius="10" Margin="0,0,5,10">
                                <StackPanel Margin="20">
                                    <TextBlock Text="ðŸŽ¨ Appearance" Foreground="#64C8FA" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,12"/>
                                    
                                    <TextBlock Text="Transparency:" Foreground="#B4B4BE" FontSize="12" Margin="0,0,0,6"/>
                                    <Slider x:Name="OpacitySlider" 
                                        Style="{StaticResource ModernSlider}"
                                        Minimum="0.7" 
                                        Maximum="1" 
                                        Value="1" 
                                        TickFrequency="0.1"
                                        ValueChanged="OpacitySlider_ValueChanged"/>
                                    <CheckBox x:Name="DebugWindowCheck" 
                                            Content="Show Debug Window" 
                                            Style="{StaticResource ModernCheckBox}"
                                            Margin="0,12,0,0"
                                            Checked="DebugWindowCheck_Changed"
                                            Unchecked="DebugWindowCheck_Changed"/>
                                </StackPanel>
                            </Border>
                            
                            
                            <Border Grid.Row="2" Grid.Column="1" Background="#1E1E2D" CornerRadius="10" Margin="5,0,0,10">
                                <StackPanel Margin="20">
                                    <TextBlock Text="ðŸš€ System" Foreground="#64C8FA" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,12"/>
                                    <CheckBox x:Name="AutoStartCheck" 
                                            Content="Start with Windows" 
                                            Style="{StaticResource ModernCheckBox}"
                                            Checked="AutoStartCheck_Changed"
                                            Unchecked="AutoStartCheck_Changed"/>
                                    <CheckBox x:Name="StartMinimizedCheck" 
                                            Content="Start minimized" 
                                            Style="{StaticResource ModernCheckBox}"
                                            Checked="StartMinimizedCheck_Changed"
                                            Unchecked="StartMinimizedCheck_Changed"/>
                                    
                                    <Button x:Name="UsageStatsButton"
                                        Content="View Token Usage and Costs" 
                                        Style="{StaticResource ModernButton}"
                                        Height="40"
                                        Margin="0,12,0,8"
                                        Click="UsageStatsButton_Click"/>

                                    <Button x:Name="ClearHistoryButton"
                                        Content="Clear History" 
                                        Style="{StaticResource ModernButton}"
                                        Background="#2D2D42"
                                        Height="35"
                                        Click="ClearHistoryButton_Click"/>

                                    <TextBlock Text="â„¹ï¸ About" Foreground="#64C8FA" FontSize="14" FontWeight="SemiBold" Margin="0,20,0,12"/>
                                    <TextBlock Text="Grammar Fixer v1.5.2" Foreground="#B4B4BE" FontSize="12" Margin="0,0,0,4"/>
                                    <TextBlock Text="Powered by Gemini" Foreground="#969696" FontSize="11" Margin="0,0,0,4"/>
                                    <TextBlock Foreground="#696969" FontSize="10">
                                    <Run Text="Â© 2025 "/>
                                    <Hyperlink x:Name="GithubLink" 
                                            NavigateUri="https://github.com/TheHolyOneZ/GrammarFixer"  RequestNavigate="Hyperlink_RequestNavigate"                Foreground="#64C8FA" 
                                            TextDecorations="None">
                                        <Run Text="TheHolyOneZ"/>
                                    </Hyperlink>
                                </TextBlock>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Grid>
                </Grid>
            </ScrollViewer>

            <Border x:Name="SavePopup"
                    Grid.Row="1"
                    Background="#1E1E2D"
                    CornerRadius="10"
                    Padding="20"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Visibility="Collapsed"
                    Opacity="0"
                    Panel.ZIndex="1000">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.7" BlurRadius="30" ShadowDepth="0"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="âœ“" 
                            Foreground="#64FA96" 
                            FontSize="48" 
                            FontWeight="Bold"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,15"/>
                    <TextBlock Text="Settings Saved Successfully!" 
                            Foreground="White" 
                            FontSize="16" 
                            FontWeight="SemiBold"
                            HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>