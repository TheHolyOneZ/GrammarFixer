<Window x:Class="GrammarFixer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Grammar Fixer" 
        Height="700" 
        Width="500"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <Storyboard x:Key="FadeInAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="0" To="1" Duration="0:0:0.3"/>
        </Storyboard>
        <Storyboard x:Key="SlideInAnimation">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                           From="20" To="0" Duration="0:0:0.4">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </Window.Resources>

    <Border CornerRadius="12" Background="#14141E">
        <Border.Effect>
            <DropShadowEffect Color="Black" Opacity="0.5" BlurRadius="20" ShadowDepth="0"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="#1E1E2D" CornerRadius="12,12,0,0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                        <Ellipse Width="10" Height="10" Fill="#64C8FA" Margin="0,0,10,0"/>
                        <TextBlock Text="Grammar Fixer" 
                                 Foreground="White" 
                                 FontSize="16" 
                                 FontWeight="SemiBold"
                                 VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,10,0">
                        <Button x:Name="MinimizeButton" 
                                Content="â”€" 
                                Width="40" 
                                Height="40"
                                Background="Transparent"
                                Foreground="White"
                                BorderThickness="0"
                                FontSize="16"
                                Click="MinimizeButton_Click"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#3C3C50"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        
                        <Button x:Name="CloseButton" 
                                Content="âœ•" 
                                Width="40" 
                                Height="40"
                                Background="Transparent"
                                Foreground="White"
                                BorderThickness="0"
                                FontSize="16"
                                Click="CloseButton_Click"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#E74C3C"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,10,0,0">
                <StackPanel x:Name="MainContent" Margin="25,10,25,25">
                    <Border Background="#1E1E2D" CornerRadius="10" Padding="20" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="âš¡ Status" Foreground="#64C8FA" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,12"/>
                            <TextBlock x:Name="StatusText" 
                                     Text="Ready" 
                                     Foreground="#64FA96" 
                                     FontSize="13" 
                                     FontWeight="Medium"
                                     Margin="0,0,0,8"/>
                            <TextBlock x:Name="StatsText" 
                                     Text="Fixes: 0 | Last fix: Never" 
                                     Foreground="#B4B4BE" 
                                     FontSize="11"/>
                        </StackPanel>
                    </Border>

                    <Border Background="#1E1E2D" CornerRadius="10" Padding="20" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="ðŸ”‘ API Configuration" Foreground="#64C8FA" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,12"/>
                            <TextBlock Text="Gemini API Key:" Foreground="#B4B4BE" FontSize="12" Margin="0,0,0,6"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBox x:Name="ApiKeyBox"
                                    Grid.Column="0"
                                    VerticalContentAlignment="Center"
                                    Padding="8, 4"
                                    Height="35"
                                    FontSize="14"
                                    GotFocus="ApiKeyBox_GotFocus"
                                    LostFocus="ApiKeyBox_LostFocus"
                                    Margin="0,0,5,0"/>
                                
                                <Button x:Name="ToggleApiKeyButton"
                                    Grid.Column="1"
                                    Content="ðŸ‘ï¸â€ðŸ—¨ï¸"
                                    Width="35"
                                    Height="35"
                                    Background="#2D2D42"
                                    Foreground="White"
                                    BorderThickness="0"
                                    FontSize="16"
                                    Click="ToggleApiKeyVisibility_Click"
                                    Cursor="Hand">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Background" Value="#2D2D42"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#3C3C50"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Grid>

                            <Button Content="ðŸ”— Get API Key" 
                                Style="{StaticResource ModernButton}"
                                Background="#2D2D42"
                                HorizontalAlignment="Left"
                                Margin="0,10,0,0"
                                Click="GetApiKeyButton_Click"/>
                        </StackPanel>
                    </Border>

                    <Border Background="#1E1E2D" CornerRadius="10" Padding="20" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="âŒ¨ï¸ Hotkey Settings" Foreground="#64C8FA" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,12"/>
                            
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Current Hotkey:" Foreground="#B4B4BE" FontSize="12" Margin="0,0,0,4"/>
                                    <TextBlock x:Name="HotkeyDisplayText" 
                                            Text="Ctrl + Alt + T" 
                                            Foreground="White" 
                                            FontSize="14" 
                                            FontWeight="SemiBold"/>
                                </StackPanel>
                                <Button Grid.Column="1"
                                    Content="ðŸ”„ Change" 
                                    Style="{StaticResource ModernButton}"
                                    Background="#2D2D42"
                                    Height="35"
                                    Padding="15,0"
                                    VerticalAlignment="Center"
                                    Click="ChangeHotkeyButton_Click"/>
                            </Grid>
                            
                            <TextBlock Text="Fix Mode:" Foreground="#B4B4BE" FontSize="12" Margin="0,0,0,6"/>
                            <ComboBox x:Name="ModeCombo" 
                                    Style="{StaticResource ModernComboBox}"
                                    Height="35"
                                    Margin="0,0,0,12"
                                    SelectionChanged="ModeCombo_SelectionChanged">
                                <ComboBoxItem Content="Replace Selected Text" IsSelected="True"/>
                                <ComboBoxItem Content="Copy to Clipboard"/>
                                <ComboBoxItem Content="Append to End"/>
                                <ComboBoxItem Content="Prepend to Start"/>
                                <ComboBoxItem Content="Show in Popup"/>
                            </ComboBox>
                            <TextBlock x:Name="ModeDescription" 
                                    Text="Replaces the selected text with the fixed version." 
                                    Foreground="#969696" 
                                    FontSize="11" 
                                    TextWrapping="Wrap"
                                    Margin="0,0,0,12"/>

                            <TextBlock Text="Processing Speed:" Foreground="#B4B4BE" FontSize="12" Margin="0,0,0,6"/>
                            <Grid Margin="0,0,0,6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Slider x:Name="SpeedSlider" 
                                    Style="{StaticResource ModernSlider}"
                                    Minimum="0" 
                                    Maximum="2" 
                                    Value="1" 
                                    TickFrequency="1" 
                                    IsSnapToTickEnabled="True"
                                    Grid.Column="0"
                                    Margin="0,0,10,0"
                                    ValueChanged="SpeedSlider_ValueChanged"/>
                                <TextBlock x:Name="SpeedLabel" 
                                        Text="Normal" 
                                        Foreground="#64C8FA" 
                                        FontSize="11" 
                                        VerticalAlignment="Center"
                                        Grid.Column="1"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <Border Background="#1E1E2D" CornerRadius="10" Padding="20" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="ðŸŽ­ Personas" Foreground="#64C8FA" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,12"/>
                            <ComboBox x:Name="PersonaCombo" 
                                    Style="{StaticResource ModernComboBox}"
                                    Height="35"
                                    Margin="0,0,0,12"
                                    SelectionChanged="PersonaCombo_SelectionChanged">
                                <ComboBoxItem Content="Standard - Fix grammar only" IsSelected="True"/>
                                <ComboBoxItem Content="Friendly - Warm and casual"/>
                                <ComboBoxItem Content="Professional - Formal and polished"/>
                                <ComboBoxItem Content="Concise - Brief and direct"/>
                                <ComboBoxItem Content="Creative - Expressive and dynamic"/>
                            </ComboBox>
                            <TextBlock x:Name="PersonaDescription" 
                                     Text="Fixes grammar, spelling, and punctuation without changing tone." 
                                     Foreground="#969696" 
                                     FontSize="11" 
                                     TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <Border Background="#1E1E2D" CornerRadius="10" Padding="20" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="âš™ï¸ Behavior" Foreground="#64C8FA" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,12"/>
                            
                            <TextBlock Text="Input Source:" Foreground="#B4B4BE" FontSize="12" Margin="0,0,0,6"/>
                            <ComboBox x:Name="InputSourceCombo" 
                                    Style="{StaticResource ModernComboBox}"
                                    Height="35"
                                    Margin="0,0,0,12"
                                    SelectionChanged="InputSourceCombo_SelectionChanged">
                                <ComboBoxItem Content="Selected Text (Auto-Copy)" IsSelected="True"/>
                                <ComboBoxItem Content="Clipboard Content Only"/>
                            </ComboBox>

                            <CheckBox x:Name="MinToTrayCheck" 
                                    Content="Minimize to system tray" 
                                    Style="{StaticResource ModernCheckBox}"
                                    IsChecked="True"/>
                            <CheckBox x:Name="NotifyCheck" 
                                    Content="Show notifications" 
                                    Style="{StaticResource ModernCheckBox}"
                                    IsChecked="True"/>
                            <CheckBox x:Name="SoundCheck" 
                                    Content="Play sound on fix" 
                                    Style="{StaticResource ModernCheckBox}"
                                    IsChecked="False"/>
                            <CheckBox x:Name="AutoCopyCheck" 
                                    Content="Auto-copy fixed text" 
                                    Style="{StaticResource ModernCheckBox}"
                                    IsChecked="True"/>
                            <CheckBox x:Name="HistoryCheck" 
                                    Content="Keep fix history" 
                                    Style="{StaticResource ModernCheckBox}"
                                    IsChecked="True"/>
                        </StackPanel>
                    </Border>

                    <Border Background="#1E1E2D" CornerRadius="10" Padding="20" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="ðŸŽ¨ Appearance" Foreground="#64C8FA" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,12"/>
                            
                            <TextBlock Text="Animation Speed:" Foreground="#B4B4BE" FontSize="12" Margin="0,0,0,6"/>
                            <Slider x:Name="AnimationSlider" 
                                  Style="{StaticResource ModernSlider}"
                                  Minimum="0.5" 
                                  Maximum="2" 
                                  Value="1" 
                                  TickFrequency="0.5"
                                  Margin="0,0,0,12"/>

                            <TextBlock Text="Transparency:" Foreground="#B4B4BE" FontSize="12" Margin="0,0,0,6"/>
                            <Slider x:Name="OpacitySlider" 
                                  Style="{StaticResource ModernSlider}"
                                  Minimum="0.7" 
                                  Maximum="1" 
                                  Value="1" 
                                  TickFrequency="0.1"
                                  ValueChanged="OpacitySlider_ValueChanged"/>
                        </StackPanel>
                    </Border>

                    <Border Background="#1E1E2D" CornerRadius="10" Padding="20" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="ðŸš€ System" Foreground="#64C8FA" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,12"/>
                            <CheckBox x:Name="AutoStartCheck" 
                                    Content="Start with Windows" 
                                    Style="{StaticResource ModernCheckBox}"
                                    Checked="AutoStartCheck_Changed"
                                    Unchecked="AutoStartCheck_Changed"/>
                            <CheckBox x:Name="StartMinimizedCheck" 
                                    Content="Start minimized" 
                                    Style="{StaticResource ModernCheckBox}"
                                    Checked="StartMinimizedCheck_Changed"
                                    Unchecked="StartMinimizedCheck_Changed"/>
                            
                            <Button x:Name="UsageStatsButton"
                                Content="ðŸ“Š View Token Usage and Costs" 
                                Style="{StaticResource ModernButton}"
                                Height="40"
                                Margin="0,12,0,8"
                                Click="UsageStatsButton_Click"/>

                            <Button x:Name="ClearHistoryButton"
                                Content="ðŸ—‘ï¸ Clear History" 
                                Style="{StaticResource ModernButton}"
                                Background="#2D2D42"
                                Height="35"
                                Click="ClearHistoryButton_Click"/>
                        </StackPanel>
                    </Border>


                    <Border Background="#1E1E2D" CornerRadius="10" Padding="20">
                        <StackPanel>
                            <TextBlock Text="â„¹ï¸ About" Foreground="#64C8FA" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,12"/>
                            <TextBlock Text="Grammar Fixer v1.0.0" Foreground="#B4B4BE" FontSize="12" Margin="0,0,0,4"/>
                            <TextBlock Text="Powered by Gemini 2.5 Flash lite" Foreground="#969696" FontSize="11" Margin="0,0,0,4"/>
                            <TextBlock Foreground="#696969" FontSize="10">
                            <Run Text="Â© 2025 "/>
                            <Hyperlink x:Name="GithubLink" 
                                    NavigateUri="https://github.com/TheHolyOneZ/GrammarFixer"  RequestNavigate="Hyperlink_RequestNavigate"                Foreground="#64C8FA" 
                                    TextDecorations="None">
                                <Run Text="TheHolyOneZ"/>
                            </Hyperlink>
                        </TextBlock>
                        </StackPanel>
                    </Border>

               



                </StackPanel>
            </ScrollViewer>

            <Border x:Name="SavePopup"
                    Grid.Row="1"
                    Background="#1E1E2D"
                    CornerRadius="10"
                    Padding="20"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Visibility="Collapsed"
                    Opacity="0"
                    Panel.ZIndex="1000">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.7" BlurRadius="30" ShadowDepth="0"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="âœ“" 
                            Foreground="#64FA96" 
                            FontSize="48" 
                            FontWeight="Bold"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,15"/>
                    <TextBlock Text="Settings Saved Successfully!" 
                            Foreground="White" 
                            FontSize="16" 
                            FontWeight="SemiBold"
                            HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>