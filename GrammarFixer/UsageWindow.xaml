<Window x:Class="GrammarFixer.UsageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Token Usage Statistics" 
        Height="600" 
        Width="700"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    
    <Border CornerRadius="12" Background="#14141E">
        <Border.Effect>
            <DropShadowEffect Color="Black" Opacity="0.5" BlurRadius="20" ShadowDepth="0"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="#1E1E2D" CornerRadius="12,12,0,0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <TextBlock Text="ðŸ“Š Token Usage Statistics" 
                             Foreground="White" 
                             FontSize="16" 
                             FontWeight="SemiBold"
                             VerticalAlignment="Center"
                             Margin="20,0"/>
                    
                    <Button x:Name="CloseButton" 
                            Content="âœ•" 
                            Width="40" 
                            Height="40"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="16"
                            Click="CloseButton_Click"
                            Cursor="Hand"
                            HorizontalAlignment="Right"
                            Margin="0,0,10,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#E74C3C"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,10,0,0">
                <StackPanel Margin="25,10,25,25">
                    <Border Background="#1E1E2D" CornerRadius="10" Padding="20" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="ðŸ’° Cost Settings" Foreground="#64C8FA" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,12"/>
                            <TextBlock Text="Price per Million Tokens ($):" Foreground="#B4B4BE" FontSize="12" Margin="0,0,0,6"/>
                            <TextBox x:Name="PriceBox"
                                Grid.Row="2" 
                                Grid.Column="1"
                                Text="{Binding Settings.TokenPricePerMillion, StringFormat='F2', Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                VerticalContentAlignment="Center"
                                Padding="8, 4"     Height="35"        FontSize="14"/>
                        </StackPanel>
                    </Border>

                    <Border Background="#1E1E2D" CornerRadius="10" Padding="20" Margin="0,0,0,15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="ðŸ“… Today" Foreground="#64C8FA" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                <TextBlock x:Name="TodayTokens" Text="0 tokens" Foreground="#B4B4BE" FontSize="12" Margin="0,0,0,4"/>
                                <TextBlock x:Name="TodayCost" Text="$0.00" Foreground="#64FA96" FontSize="14" FontWeight="SemiBold"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" Margin="0,0,10,0">
                                <TextBlock Text="ðŸ“† This Week" Foreground="#64C8FA" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                <TextBlock x:Name="WeekTokens" Text="0 tokens" Foreground="#B4B4BE" FontSize="12" Margin="0,0,0,4"/>
                                <TextBlock x:Name="WeekCost" Text="$0.00" Foreground="#64FA96" FontSize="14" FontWeight="SemiBold"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="ðŸ“Š This Month" Foreground="#64C8FA" FontSize="13" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                <TextBlock x:Name="MonthTokens" Text="0 tokens" Foreground="#B4B4BE" FontSize="12" Margin="0,0,0,4"/>
                                <TextBlock x:Name="MonthCost" Text="$0.00" Foreground="#64FA96" FontSize="14" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Border Background="#1E1E2D" CornerRadius="10" Padding="20" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="ðŸ“ˆ Total Usage" Foreground="#64C8FA" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,12"/>
                            <TextBlock x:Name="TotalTokens" Text="Total Tokens: 0" Foreground="#B4B4BE" FontSize="13" Margin="0,0,0,6"/>
                            <TextBlock x:Name="TotalCost" Text="Total Cost: $0.00" Foreground="#64FA96" FontSize="16" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>

                    <Border Background="#1E1E2D" CornerRadius="10" Padding="20">
                        <StackPanel>
                            <TextBlock Text="ðŸ“œ Recent Usage" Foreground="#64C8FA" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,12"/>
                            <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto">
                                <ItemsControl x:Name="UsageList">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#28283D" CornerRadius="6" Padding="12" Margin="0,0,0,8">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <StackPanel Grid.Column="0">
                                                        <TextBlock Text="{Binding Timestamp, StringFormat='{}{0:MMM dd, yyyy HH:mm:ss}'}" 
                                                                 Foreground="#B4B4BE" 
                                                                 FontSize="11"/>
                                                        <TextBlock Foreground="#969696" FontSize="10">
                                                            <Run Text="Input: "/><Run Text="{Binding InputTokens}"/><Run Text=" | Output: "/><Run Text="{Binding OutputTokens}"/>
                                                        </TextBlock>
                                                    </StackPanel>
                                                    <TextBlock Grid.Column="1" 
                                                             Text="{Binding TotalTokens, StringFormat='{}{0} tokens'}" 
                                                             Foreground="#64C8FA" 
                                                             FontSize="12"
                                                             FontWeight="SemiBold"
                                                             VerticalAlignment="Center"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>