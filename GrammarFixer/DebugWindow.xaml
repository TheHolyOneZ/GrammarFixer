<Window x:Class="GrammarFixer.DebugWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Debug Console" Height="450" Width="800"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterScreen">
    <Border CornerRadius="12" Background="#1A1A1A" Opacity="0.9" BorderBrush="#333" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="#2C2C2C" CornerRadius="12,12,0,0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0">
                        <Ellipse Width="12" Height="12" Fill="#FF5F57" Margin="0,0,8,0"/>
                        <Ellipse Width="12" Height="12" Fill="#FEBC2E" Margin="0,0,8,0"/>
                        <Ellipse Width="12" Height="12" Fill="#28C840"/>
                    </StackPanel>
                    <TextBlock Text="Debug Console" Foreground="#CCC" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <Button Content="âœ•" Click="CloseButton_Click" Style="{StaticResource ModernButton}" HorizontalAlignment="Right" VerticalAlignment="Center" Width="30" Height="30" Background="Transparent" Foreground="#CCC" BorderThickness="0"/>
                </Grid>
            </Border>

            <ScrollViewer Grid.Row="1" x:Name="LogScrollViewer" VerticalScrollBarVisibility="Auto" Margin="5">
                <TextBlock x:Name="LogTextBlock" TextWrapping="Wrap" FontFamily="Consolas" Foreground="#EAEAEA" Margin="10"/>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>
